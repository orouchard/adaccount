<%= form_with(model: price) do |form| %>
  <% if price.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(price.errors.count, "error") %> prohibited this price from being saved:</h2>

      <ul>
        <% price.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :date_from, class: "form-label" %>
    <%= form.date_field :date_from, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :date_to, class: "form-label" %>
    <%= form.date_field :date_to, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :amount, class: "form-label" %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :currency, class: "form-label" %>
    <%= form.text_field :currency, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :active, class: "form-check-label" %>
    <%= form.check_box :active, class: "form-check-input" %>
  </div>
  
  <div>
    <%= form.submit "Submit", class: "btn btn-outline-success" %>
  </div>
<% end %>
