<div class="container">
<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col">
    <div aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", root_url %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= link_to "Parameters", params_path %></li>
      </ol>
    </div>
  </div>
  <div class="col">
    <form class="d-flex" role="search">
      <input class="form-control me-2 text-white" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</div>


<hr class="mb-3">

<h1>Parameters</h1>

<div id="params">
  <div id="params">
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Value</th>
          <th scope="col">Label</th>
          <th scope="col">Active</th>
        </tr>
      </thead>
      <tbody>
        <% @params.each do |param| %>
        <tr>
          <th scope="row"><%= link_to param.group, param %></th>
          <td><%= param.value %></td>
          <td><%= param.label %></td>
          <td><%= param.active %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr class="mb-3">

<div class="row mb-3">
  <%= render "form", param: Param.new %>
</div>

<%= link_to "New parameter", new_param_path %>
